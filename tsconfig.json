{
	"compilerOptions": {
		"sourceMap": true,
		"module": "esnext",
		"lib": ["dom", "ESNext"],
		"esModuleInterop": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"allowUmdGlobalAccess": true,
		"incremental": true,
		"strictNullChecks": true
	},
	"include": ["./src/"],
	"exclude": ["./dist", "./tests"]
}
