{
	"name": "cppkies",
	"version": "0.3.0-alpha1",
	"description": "Cppkies is a modding framework for the game Cookie Clicker. It intends to make modding the game very simple.",
	"main": "./dist/index.js",
	"module": "./dist/esm/index.js",
	"typings": "./dist/index.d.ts",
	"scripts": {
		"test": "npx playwright test",
		"code-test": "npm run prodBuild && npm run eslint",
		"build": "npx rollup -c",
		"prodBuild": "rm -rf dist && export NODE_ENV=\"production\" && npm run build",
		"watch": "export NODE_ENV=\"development\"&&npm run build -- --watch",
		"eslint": "npx eslint ./src/**/*.ts ./src/*.ts ./*.js",
		"eslint:fix": "npm run eslint -- --fix",
		"build-dts": "npx dts-bundle-generator src/index.ts -o dist/index.d.ts",
		"watch-esm": "export NODE_ENV=\"development\" CPPKIES_ESM_DEBUGGING=\"yes\" && npm run build -- --watch",
		"prepare": "npx cookie-connoisseur fetch",
		"prepublishOnly": "npm run prodBuild && npm test"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run code-test && git add dist",
			"pre-push": "npm run test"
		}
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Cppkies-Team/Cppkies.git"
	},
	"author": "Cppkies team",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/Cppkies-Team/Cppkies/issues"
	},
	"types": "./dist/index.d.ts",
	"homepage": "https://github.com/Cppkies-Team/Cppkies#readme",
	"devDependencies": {
		"@playwright/test": "^1.15.2",
		"@rollup/plugin-commonjs": "^21.0.0",
		"@rollup/plugin-node-resolve": "^13.0.5",
		"@types/cookieclicker": "^2.44.0",
		"@types/lz-string": "^1.3.34",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"cookie-connoisseur": "0.2.0",
		"eslint": "^8.0.1",
		"eslint-config-prettier": "^6.15.0",
		"eslint-plugin-prettier": "^3.1.4",
		"husky": "^7.0.2",
		"playwright": "^1.15.2",
		"prettier": "^2.5.1",
		"rollup": "^2.58.0",
		"rollup-plugin-dts": "^4.2.0",
		"rollup-plugin-jscc": "^2.0.0",
		"rollup-plugin-terser": "^7.0.2",
		"rollup-plugin-typescript2": "^0.31.1",
		"tslib": "^2.3.0",
		"typescript": "^4.3.5"
	},
	"sideEffects": [
		"./dist/esm/index.js"
	]
}
